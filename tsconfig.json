{
    "compileOnSave": false,
    "compilerOptions": {
        "target": "es5",
        "outDir": "./dist",
        "sourceMap": true,
        "module": "commonjs",
        "declaration": false,
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "rootDir": "src/",
        "allowJs": true,
        "typeRoots": [
            "node_modules/@types"
        ],
        "lib": [
            "es2017",
            "dom"
        ]
    },
    "include": [
        "src/fridge-dashboard/**/*.ts",
        "src/assets/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "test.ts",
        "**/*.spec.ts",
        "dist",
        "mfe-*"
    ]
}